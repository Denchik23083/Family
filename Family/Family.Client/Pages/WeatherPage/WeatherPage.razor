@page "/weather"

<div class="weather">
    @if (Weather is not null)
    {
        <table class="table table-borderless" style="color: rgb(80, 200, 230);">
            <thead>
            <tr>
                <th>Date</th>
                <th>Temp. (C)</th>
                <th>Temp. (F)</th>
                <th>Summary</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var weather in Weather)
            {
                <tr>
                    <td>@weather.Date.ToShortDateString()</td>
                    <td>@weather.TemperatureC</td>
                    <td>@weather.TemperatureF</td>
                    <td>@weather.Summary</td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>Loading...</p>
    }

</div>

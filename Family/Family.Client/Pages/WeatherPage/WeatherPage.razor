@page "/weather"

<h1>Weather</h1>

@if (Weather == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Temp. (C)</th>
                <th>Temp. (F)</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var weather in Weather)
            {
                <tr>
                    <td>@weather.Date.ToShortDateString()</td>
                    <td>@weather.TemperatureC</td>
                    <td>@weather.TemperatureF</td>
                    <td>@weather.Summary</td>
                </tr>
            }
        </tbody>
    </table>
}
